<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <!--    tirar   android:usesCleartextTraffic="true" -->
    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.IPBCasteloBranco"
        android:usesCleartextTraffic="true">
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".features.worshiphub.hub.entry.WorshipHubActivity"
            android:exported="false"
            android:label="Worship Hub"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name=".features.admin.entry.AdminActivity"
            android:exported="false"
            android:label="Admin panel"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name=".features.gallery.entry.GalleryActivity"
            android:exported="false"
            android:label="Gallery"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/uCropCustomTheme" />
        <activity
            android:name=".features.profile.entry.ProfileActivity"
            android:exported="false"
            android:label="Profile"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name=".features.auth.entry.AuthActivity"
            android:exported="false"
            android:label="Authentication"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name=".features.settings.entry.SettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name=".features.schedule.entry.ScheduleActivity"
            android:exported="false"
            android:label="Month Schedule"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name=".features.hymnal.entry.HymnalActivity"
            android:exported="false"
            android:label="Hymnal"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco" />
        <activity
            android:name=".features.main.entry.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.IPBCasteloBranco">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>